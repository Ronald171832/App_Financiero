<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.proyectosi2.multibanco.multibanco.MainActivity">

    <include android:id="@+id/perfil_tool_bar"
        layout="@layout/nav_bar"
        >
    </include>

    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="LOGIN"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorPrimary"
            android:textSize="35dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_login_usuario"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:hint="Correo Usuario"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/et_login_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:hint="ContraseÃ±a"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <Button
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_iniciar_sesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/boton"
            android:onClick="ingresar"
            android:text="     Iniciar Sesion    "
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
